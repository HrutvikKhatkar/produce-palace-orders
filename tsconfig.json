{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    // "baseUrl": ".",
    // "paths": {
    //   "@/*": ["./src/*"]
    // },
    "baseUrl": "./src",  // Make sure to set baseUrl to the root of your src directory
    "paths": {
      "@/*": ["*"]  // This tells TypeScript to resolve "@" as the src directory
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
